{
  "enterprise_detection": {
    "entropy_analysis": {
      "enabled": true,
      "threshold": 7.5,
      "alert_on_suspicious": true
    },
    "canary_monitoring": {
      "enabled": true,
      "check_interval": 5,
      "canary_directory": null,
      "locations": [
        "%TEMP%\\__CANARY__",
        "C:\\Users\\Public\\Documents",
        "C:\\ProgramData"
      ]
    },
    "threat_intelligence": {
      "enabled": false,
      "virustotal_api_key": "YOUR_API_KEY_HERE",
      "check_new_files": true,
      "cache_results": true,
      "rate_limit_per_minute": 4,
      "backoff_seconds": 60
    }
  },
  "token_gate": {
    "guardian_sid": null,
    "lease_ttl_seconds": 300,
    "apply_on_startup": false,
    "gate_mode": "gate"  /* options: gate, encrypt_gate */
  },
  "alerting": {
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "smtp_user": "your-email@gmail.com",
      "smtp_password": "your-app-password",
      "from_address": "antiransomware@yourcompany.com",
      "to_addresses": [
        "security@yourcompany.com",
        "admin@yourcompany.com"
      ]
    },
    "slack": {
      "enabled": false,
      "webhook_url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
      "channel": "#security-alerts"
    },
    "teams": {
      "enabled": false,
      "webhook_url": "https://outlook.office.com/webhook/YOUR/WEBHOOK/URL"
    },
    "alert_levels": {
      "LOW": false,
      "MEDIUM": false,
      "HIGH": true,
      "CRITICAL": true
    }
  },
  "detection_rules": {
    "rapid_file_changes": {
      "enabled": true,
      "threshold": 50,
      "time_window_seconds": 10
    },
    "mass_encryption": {
      "enabled": true,
      "entropy_threshold": 7.5,
      "file_count_threshold": 10
    },
    "suspicious_extensions": {
      "enabled": true,
      "extensions": [
        ".encrypted",
        ".locked",
        ".crypto",
        ".crypt",
        ".cerber",
        ".locky",
        ".wcry",
        ".wncry"
      ]
    }
  },
  "response_actions": {
    "auto_isolate": false,
    "auto_snapshot": true,
    "auto_kill_process": true,
    "auto_network_block": false,
    "quarantine_suspicious_files": true
  },
  "compliance": {
    "logging": {
      "enabled": true,
      "retention_days": 90,
      "siem_integration": false,
      "siem_endpoint": null
    },
    "reporting": {
      "enabled": true,
      "daily_summary": false,
      "weekly_summary": true,
      "monthly_compliance_report": true
    }
  }
}
